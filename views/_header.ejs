
<header>

    <nav>
        <div class="mini-logo">
            <a href='/'>
                <img src="/images/component 1.svg" height="40" >
            </a> 
        </div>    
        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                    <div class="right-nav">
                        <li>
                            <a href="/users/profile/<%= user.id %>">
                                <%= user.name %></li>
                            </a>
                        <li class="logoutBtn">
                            <a href="/users/logout">Logout</a>
                        </li>
                    </div>
                <% }else{ %>
                    <div class="right-nav">
                        <li>
                            <a href="/users/sign-in">Sign In</a>
                        </li>    
                        <li>
                            <a href="/users/sign-up">Sign Up</a>
                        </li>
                    </div>
                    
                <% } %>
            </ul>
        </div>
    </nav>
    
</header>